          {#- theme selector ~#}
          <form id="theme-form">
            <label class="{% if label ?? false != true %}sr-only{% endif %}" for="theme-select">{% trans %}Theme:{% endtrans %}</label>
            <select id="theme-select" onchange="switchTheme(value)" class="selector selector-theme text-ellipsis focus:outline-none">
              <option value="auto">{% trans %}Auto{% endtrans %}</option>
              <option value="dark">{% trans %}Dark{% endtrans %}</option>
              <option value="light">{% trans %}Light{% endtrans %}</option>
            </select>
          </form>
          <script>
            {%- apply minify_js ~%}
            function switchTheme(theme) {
              switch (theme) {
                case 'dark':
                  localStorage.theme = 'dark';
                  updateTheme();
                  break;
                case 'light':
                  localStorage.theme = 'light';
                  updateTheme();
                  break;
                default:
                  localStorage.removeItem('theme');
                  updateTheme();
              }
              selectTheme(); // select others selects :-)
            }
            function selectTheme() {
              var selectors = document.getElementsByClassName('selector-theme');
              [].forEach.call(selectors, function (selector) {
                if (!('theme' in localStorage)) {
                  selector.options[0].selected = true;
                }
                if (localStorage.theme === 'dark') {
                  selector.options[1].selected = true;
                }
                if (localStorage.theme === 'light') {
                  selector.options[2].selected = true;
                }
              });
              updateTheme();
            }
            function updateTheme() {
              if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
                document.documentElement.dataset.theme = 'dark';
              } else {
                document.documentElement.classList.remove('dark');
                delete document.documentElement.dataset.theme;
              }
            }
            selectTheme();
            window.addEventListener('load', (event) => {
              selectTheme();
            });
            window
              .matchMedia('(prefers-color-scheme: dark)')
              .addEventListener('change', ({matches:isDark}) => {
                updateTheme();
              })
            {%- endapply ~%}
          </script>